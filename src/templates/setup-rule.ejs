<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
        <title>Set up - SecurEval</title>
    </head>
    <body>
        <%- include('./partials/nav-start'); %>
            <div class='toast-container' style='position: sticky;top: 10px;right: 10px;z-index:2;width: max-content;margin-left:auto;'>
                <div class='toast fade' id='ruleToast' data-bs-autohide="false">
                    <div class='toast-header'>
                        <strong class='me-auto' id="statusToastHeader"></strong>
                        <button type='button' class='btn-close' data-bs-dismiss='toast'></button>
                    </div>
                    <div class='toast-body'>
                        <span id="statusToastBody"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                    <h3><a href="/setup" class="text-decoration-none">&#x2190;</a> Setup</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card border-0">
                        <div class="card-body">
                            <span class=""><span class="fs-3 lh-base fw-medium"><%= rule.name %> </span> <div class="spinner-border text-primary" role="status" style="display: none;" id="mainSpinner"></div></span>
                            <input type="hidden" name="ruleId" id="ruleId" value="<%= rule.id %>">
                            <hr>
                            <div class="row mb-2">
                                <h4>Checklist</h4>
                                <div class="col-md-4">
                                    <ul class="list-group">
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <span>Rule has Facts</span>
                                            <div id="checklistRuleFacts"><div class="status-circle"></div></div>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <span>Rule has Conditions</span>
                                            <div id="checklistRuleConditions"><div class="status-circle"></div></div
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-start">
                                            <span>App assigned to Rule</span>
                                            <div id="checklistRuleApps"><div class="status-circle"></div></div>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-body d-flex justify-content-between">
                                            <span>Rule is ready to evaluate</span>
                                            <div id="checklistRuleReady"><div class="status-circle"></div></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" id="deploySelect" style="display: none;">
                                <div class="col-4">
                                    <h4>Deploy</h4>
                                    <div class="mb-3">
                                        <label for="deployAppList" class="form-label">App</label>
                                        <select class="form-select" aria-label="Default select example" id="deployAppList">
                                            <option selected disabled>Select app</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div id="deployBlock">
                            </div>
                            <div class="row" id="deployError" style="display: none;">
                                <div class="col-md-12">
                                    <p>Please correct the above errors before attempting to deploy.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="/static/js/setupRule.js"></script>
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    initializeSetupRulePage();
                });
            </script>
        <%- include('./partials/setup-rule-deploy'); %>
        <%- include('./partials/nav-end'); %>
        <%- include('./partials/footer'); %>
    </body>
</html>